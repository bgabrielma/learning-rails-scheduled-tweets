<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
<%= render "shared/form_errors", form: form %>
<div class="mb-3">
    <%= form.label :password %>
    <%= form.text_field :password, placeholder: "password", class: "form-control" %>
</div>
<div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, placeholder: "password", class: "form-control" %>
</div>
<div class="mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary" %>
</div>
<% end %>